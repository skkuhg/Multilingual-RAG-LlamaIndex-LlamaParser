# Environment variables for Multilingual RAG Language Learning System

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
LLAMACLOUD_API_KEY=your_llamacloud_api_key_here

# Optional API Keys
TAVILY_API_KEY=your_tavily_api_key_here

# System Configuration
LOG_LEVEL=INFO
MAX_TOKENS=2000
CACHE_DIR=./cache

# File Processing Settings
MAX_FILE_SIZE_MB=50
MAX_BATCH_SIZE=1000

# RAG Settings
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini
TEMPERATURE=0.2
TOP_K_RESULTS=5

# SRS Settings
DEFAULT_EASE_FACTOR=2.5
MIN_EASE_FACTOR=1.3
INITIAL_INTERVAL=1

# Cost Tracking
EMBEDDING_COST_PER_1K=0.00002
LLM_COST_PER_1K=0.00015
